function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(Git branch : \1)/'
}

PS1="${BRIDGET_CYAN}[${CYAN}\u${BRIGHT_GREEN}$@@${VIOLET}\h${BRIGHT_BLACK}:\w${BRIDGET_CYAN}]${NORMAL}\$ ${YELLOW}\$(parse_git_branch)${NORMAL} ${RESET}"


